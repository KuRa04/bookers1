<h1> Books</h1>

<% @book.errors.full_messages.each do |message| %>

    <%= message %>

 <% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      <td><%= link_to "Show", booklist_path(book.id) %></td> 
         <td><%= link_to "Edit", edit_booklist_path(book) %></td>
        <td><%= link_to "Destroy", destroy_booklist_path(book), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
      </tr>
      
    <% end %>
  </tbody>
</table>

<br>


<h1>New book</h1>


<!-- form_with部分 -->
<%= form_with model: @book, url:'/booklists', local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
  