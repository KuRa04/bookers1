<h1>編集画面</h1>

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<% @book.errors.full_messages.each do |message| %>

    <%= message %>
<p>error</p>
 <% end %>


<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>本文</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
  
  <%= link_to "Show", book_path(@book.id) %>
  <%= link_to "Back", "/books" %>
<% end %>